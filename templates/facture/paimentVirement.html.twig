{% extends 'template.html.twig' %}

{% block body %}
    <div class="container" style=" margin-top: 20px">
   <h5> <i class="fa fa-money" aria-hidden="true"></i>
    Paiment avec carte bancaire</h5>
    <div class="container-sm"  style="width: 70%;" >

          <div class="row">
              {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
              {{ form_label(form.Cin) }}
              {{ form_widget(form.Cin , {attr:{'placeholder':"merci d'introduire votre Cin"}}) }}
              {{  form_errors(form.Cin)}}
              {{ form_label(form.Rib) }}
              {{ form_widget(form.Rib,{attr:{'placeholder':"merci d'introduire votre Rib Code"}}) }}
              {{ form_errors(form.Rib) }}
              <br>
              <div class="row">
                  <div class="col-4"></div>
                  <div class="col-8"> {{ form_widget(form.Captcha) }}
                      {{ form_errors(form.Captcha) }}</div>
              </div>


              <div class="row">
                  <div class="col-10"></div>
                  <div class="col-2">{{ form_widget(form.verif) }}</div>
              </div>



              {{ form_label(form.Code) }}
              {{ form_widget(form.Code, {attr:{'placeholder':"merci d'introduire le code envoyer par email"}}) }}

              {{  form_errors(form.Code)}}





              <div class="row" style="margin-bottom: 20px ; margin-top: 5px;">
                  <div class="col-10"></div>
                  <div class="col-2">{{ form_widget(form.Payer) }}</div>
              </div>
              {{ form_end(form) }}
          </div>
    </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset("paiment.js") }}"></script>
{% endblock %}